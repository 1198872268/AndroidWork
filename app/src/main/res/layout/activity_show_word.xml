<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".show_word">

    <TextView
        android:id="@+id/next_word"
        style="@style/word"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/next_content"
        app:layout_constraintEnd_toEndOf="@+id/next_content"
        app:layout_constraintStart_toStartOf="@+id/next_content" />

    <TextView
        android:id="@+id/next_content"

        style="@style/content"
        android:layout_marginBottom="100dp"
        android:background="@drawable/text_radioborder"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="@+id/btn_next"
        app:layout_constraintStart_toStartOf="@+id/btn_next" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginBottom="100dp"
        android:onClick="next"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>